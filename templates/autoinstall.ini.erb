[install]
language=en
install_mode=expert
hostname=<%= fqdn %>
mysql_hostname=localhost
mysql_root_user=root
mysql_root_password=<%= @db_options['root_password'] %>
mysql_database=<%= @db_options['ispconfig_database'] %>
mysql_charset=utf8
http_server=apache
ispconfig_port=8080
ispconfig_use_ssl=y

[ssl_cert]
ssl_cert_country=<%= @ssl_options['ssl_cert_country'] %>
ssl_cert_state=<%= @ssl_options['ssl_cert_state'] %>
ssl_cert_locality=<%= @ssl_options['ssl_cert_locality'] %>
ssl_cert_organisation=<%= @ssl_options['ssl_cert_organisation'] %>
ssl_cert_organisation_unit=<%= @ssl_options['ssl_cert_organisation_unit'] %>
ssl_cert_common_name=<%= fqdn %>

[expert]
mysql_ispconfig_user=<%= @db_options['ispconfig_username'] %>
mysql_ispconfig_password=<%= @db_options['ispconfig_password'] %>
<% if @master == true   %>join_multiserver_setup=n<% else          %>join_multiserver_setup=y<% end %>
mysql_master_hostname=<%= @db_options['master_hostname'] %>
mysql_master_root_user=<%= @db_options['master_username'] %>
mysql_master_root_password=<%= @db_options['master_password'] %>
mysql_master_database=<%= @ispconfig_database %>
<% if @mail == true     %>configure_mail=y<%                  else %>configure_mail=n<% end %>
configure_jailkit=n
configure_ftp=n
<% if @database == true %>configure_db=y<%                    else %>configure_db=n<% end %>
<% if @dns == true      %>configure_dns=y<%                   else %>configure_dns=n<% end %>
<% if @web == true      %>configure_apache=y<%                else %>configure_apache=n<% end %>
configure_nginx=n
configure_firewall=y
<% if @master == true   %>install_ispconfig_web_interface=y<% else %>install_ispconfig_web_interface=n<% end %>

[update]
do_backup=yes
mysql_root_password=<%= @db_options['root_password'] %>
mysql_master_hostname=<%= @db_options['master_hostname'] %>
mysql_master_root_user=<%= @db_options['master_username'] %>
mysql_master_root_password=<%= @db_options['master_password'] %>
mysql_master_database=<%= @ispconfig_database %>
reconfigure_permissions_in_master_database=no
reconfigure_services=yes
ispconfig_port=8080
create_new_ispconfig_ssl_cert=no
reconfigure_crontab=yes
